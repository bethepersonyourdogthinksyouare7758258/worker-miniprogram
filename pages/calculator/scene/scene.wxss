/* 引入全局样式系统 */
@import "../../../styles/index.wxss";

/* pages/calculator/scene/scene.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.scene-header {
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.scene-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.scene-description {
  font-size: 28rpx;
  color: #666;
}

.calculator-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.calculator-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  transition: background-color 0.2s;
}

.calculator-item:last-child {
  border-bottom: none;
}

.calculator-item:active {
  background-color: #f9f9f9;
}

.item-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.item-name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.item-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}
