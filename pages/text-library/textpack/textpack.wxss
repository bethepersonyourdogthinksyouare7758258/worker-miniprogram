/* textpack.wxss - 温暖活泼风格 */
.scrollarea {
  height: 100vh;
  background-color: #FDF8E1;
}

.container {
  background-color: #FDF8E1;
  min-height: 100vh;
  padding: 60rpx 30rpx 100rpx;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 40rpx;
}

.title {
  font-size: 52rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  opacity: 0.9;
  display: block;
  line-height: 1.5;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.category-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefcf8 100%);
  border: 3rpx solid #f0e6cc;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.25s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 6rpx 25rpx rgba(255, 204, 102, 0.15);
  min-height: 140rpx;
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #fff4e6 0%, #ffe4b3 50%, #ffd699 100%);
  opacity: 0;
  transition: opacity 0.25s ease;
  z-index: 0;
}

.category-card:active {
  transform: translateY(3rpx);
  border-color: #ffcc66;
  box-shadow: 0 3rpx 20rpx rgba(255, 204, 102, 0.3);
}

.category-card:active::before {
  opacity: 0.6;
}

.card-icon {
  font-size: 56rpx;
  margin-right: 32rpx;
  z-index: 1;
  position: relative;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 153, 102, 0.3));
}

.card-content {
  flex: 1;
  z-index: 1;
  position: relative;
}

.card-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

.card-arrow {
  font-size: 32rpx;
  color: #ff9966;
  z-index: 1;
  position: absolute;
  top: 24rpx;
  right: 32rpx;
  transition: all 0.25s ease;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 153, 102, 0.3));
}

.category-card:active .card-arrow {
  color: #ff6633;
  transform: translateX(4rpx);
}

.footer {
  text-align: center;
  margin-top: 80rpx;
  padding-bottom: 40rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #999;
  opacity: 0.8;
  line-height: 1.6;
}
