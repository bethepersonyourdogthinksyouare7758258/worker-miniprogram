/* 引入全局样式系统 */
@import "../../styles/index.wxss";

/* 页面特有样式 */

/* 介绍项目样式 */
.intro-content {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.intro-item {
  display: flex;
  align-items: flex-start;
  padding: var(--spacing-lg);
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  transition: var(--transition-normal);
}

.intro-item:active {
  background: #F5F2E6;
  transform: scale(0.98);
}

.intro-icon {
  font-size: var(--font-size-2xl);
  margin-right: var(--spacing-lg);
  margin-top: var(--spacing-xs);
}

.intro-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.intro-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-sm);
}

.intro-desc {
  font-size: var(--font-size-base);
  color: var(--color-text-tertiary);
  line-height: var(--line-height-relaxed);
}

/* 特色功能网格 */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-lg);
}

.feature-item {
  background: var(--color-bg-secondary);
  border: 2rpx solid var(--color-border-tertiary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  text-align: center;
  transition: var(--transition-normal);
}

.feature-item:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-lg);
}

.feature-icon {
  font-size: var(--font-size-3xl);
  margin-bottom: var(--spacing-md);
  display: block;
}

.feature-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.feature-desc {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  display: block;
}

/* 反馈部分 */
.feedback-content {
  display: flex;
  flex-direction: column;
}

.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: var(--spacing-lg);
  border: 2rpx solid var(--color-border-secondary);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  background: var(--color-bg-secondary);
  box-sizing: border-box;
  transition: var(--transition-normal);
  color: var(--color-text-primary);
  font-family: var(--font-family-base);
}

.feedback-textarea:focus {
  border-color: var(--color-text-primary);
  box-shadow: 0 0 0 4rpx rgba(44, 44, 44, 0.1);
}

.textarea-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: var(--spacing-sm);
  margin-bottom: var(--spacing-lg);
}

.char-count {
  font-size: var(--font-size-sm);
  color: var(--color-text-quaternary);
}

/* FAQ样式 */
.faq-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.faq-item {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transition: var(--transition-normal);
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg);
  cursor: pointer;
  transition: var(--transition-normal);
}

.faq-question:active {
  background: #F5F2E6;
}

.faq-q {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
  flex: 1;
  padding-right: var(--spacing-lg);
}

.faq-arrow {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  transition: transform var(--duration-normal);
}

.faq-answer {
  padding: 0 var(--spacing-lg) var(--spacing-lg);
  animation: slideDown var(--duration-normal) var(--ease-smooth);
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.faq-a {
  font-size: var(--font-size-base);
  color: var(--color-text-tertiary);
  line-height: var(--line-height-relaxed);
}

/* 页脚 */
.footer-section {
  text-align: center;
  padding: var(--spacing-4xl) var(--spacing-xl) var(--spacing-5xl);
}

.footer-text {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  display: block;
  margin-bottom: var(--spacing-sm);
  font-weight: var(--font-weight-medium);
}

.footer-desc {
  font-size: var(--font-size-base);
  color: var(--color-text-quaternary);
  display: block;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .features-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-md);
  }
  
  .feature-item {
    padding: var(--spacing-lg);
  }
  
  .intro-item {
    padding: var(--spacing-md);
  }
  
  .intro-icon {
    font-size: var(--font-size-xl);
    margin-right: var(--spacing-md);
  }
}

@media (min-width: 750px) {
  .features-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-xl);
  }
  
  .intro-content {
    gap: var(--spacing-xl);
  }
}