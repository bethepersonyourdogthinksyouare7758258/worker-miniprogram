<!-- pages/result/result.wxml -->
<view class="splash-container">
  <!-- 头部：离理想工作差 X 步 -->
  <view class="steps-title">离理想工作差 {{stepsToIdeal}} 步</view>

  <!-- GIF Logo -->
  <image class="logo" src="/.cloudbase/assets/logo.gif" mode="aspectFit" />

  <!-- 雷达图 -->
  <view class="radar-section">
    <canvas canvas-id="radarCanvas" style="width: 300px; height: 300px;"></canvas>
  </view>

  <!-- 性价比 -->
  <view class="cost-performance">性价比（Offer/理想）：{{costPerformance}}</view>

  <!-- 表格 -->
  <view class="table">
    <!-- 表头 -->
    <view class="table-row table-header">
      <text class="table-cell"></text>
      <text class="table-cell">Offer</text>
      <text class="table-cell">理想</text>
    </view>
    <!-- 总得分 -->
    <view class="table-row">
      <text class="table-cell">总得分</text>
      <text class="table-cell">{{offerTotalScore}}</text>
      <text class="table-cell">{{idealTotalScore}}</text>
    </view>
    <!-- 收入 -->
    <view class="table-row">
      <text class="table-cell">收入</text>
      <text class="table-cell">{{offerSalary}}</text>
      <text class="table-cell">{{idealSalary}}</text>
    </view>
    <!-- 副收入 -->
    <view class="table-row">
      <text class="table-cell">副收入</text>
      <text class="table-cell">{{offerSideIncome}}</text>
      <text class="table-cell">{{idealSideIncome}}</text>
    </view>
    <!-- 生活成本 -->
    <view class="table-row">
      <text class="table-cell">生活成本</text>
      <text class="table-cell">{{offerCost}}</text>
      <text class="table-cell">{{idealCost}}</text>
    </view>
    <!-- 9 个系数 -->
    <view class="table-row">
      <text class="table-cell">发展空间</text>
      <text class="table-cell">{{offerItemScores.potentialDevelopment}}</text>
      <text class="table-cell">{{idealItemScores.potentialDevelopment}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">支配时间</text>
      <text class="table-cell">{{offerItemScores.reproduction}}</text>
      <text class="table-cell">{{idealItemScores.reproduction}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">人脉</text>
      <text class="table-cell">{{offerItemScores.socialValue}}</text>
      <text class="table-cell">{{idealItemScores.socialValue}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">社交认可</text>
      <text class="table-cell">{{offerItemScores.socialRecognition}}</text>
      <text class="table-cell">{{idealItemScores.socialRecognition}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">简历美化</text>
      <text class="table-cell">{{offerItemScores.resume}}</text>
      <text class="table-cell">{{idealItemScores.resume}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">职场舒适</text>
      <text class="table-cell">{{offerItemScores.workComfort}}</text>
      <text class="table-cell">{{idealItemScores.workComfort}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">公司稳定</text>
      <text class="table-cell">{{offerItemScores.jobStability}}</text>
      <text class="table-cell">{{idealItemScores.jobStability}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">工作轻松</text>
      <text class="table-cell">{{offerItemScores.jobEase}}</text>
      <text class="table-cell">{{idealItemScores.jobEase}}</text>
    </view>
    <view class="table-row">
      <text class="table-cell">工作自由</text>
      <text class="table-cell">{{offerItemScores.flexibility}}</text>
      <text class="table-cell">{{idealItemScores.flexibility}}</text>
    </view>
  </view>

  <!-- 寄语 -->
  <view class="message">现实生活，有时没有最优选和最优解，只有性价比，也许计算下来，是时候跨出新一步了，也许也只能屎里雕花了</view>

  <!-- 二维码 -->
  <image class="qrcode" src="/.cloudbase/assets/qrcode.jpg" mode="aspectFit" />

  <button 
  class="share-button" 
  bindtap="shareToFriend"
>
  分享给朋友
</button>
</view>