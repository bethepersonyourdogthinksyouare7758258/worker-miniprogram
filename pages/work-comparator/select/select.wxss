/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;  /* 垂直排列内容 */
  align-items: center;  /* 水平居中 */
  justify-content: flex-start;  /* 内容从顶部开始排列 */
  height: 100vh;  /* 高度占满整个视口 */
  padding: 20px;  /* 给左右添加一定的内边距，避免文字贴边 */
}

/* GIF 动画 */
.logo {
  width: 150rpx;  /* 设置 GIF 动画的宽度 */
  height: 150rpx; /* 设置 GIF 动画的高度 */
  margin-top: 150rpx;  /* 动画和标题之间的间隔，减少上边距 */
  margin-bottom: 10rpx;  /* 动画和标题之间的间隔 */
}

/* 标题 */
.title {
  font-size: 35px;
  font-weight: bold;
  text-align: center;
  color: #2b2b2b;  /* 深灰色字体 */
  margin-bottom: 10px;  /* 标题和按钮之间的间隔 */
  letter-spacing: 2rpx;  /* 增大字母之间的间距 */
}

/* 选择按钮 */
.option-btn {
  width: 700rpx; /* 或者使用 px，如 300px */
  height: 100px; /* 固定高度 */
  padding: 0; /* 移除 padding，防止撑高 */
  margin-top: 20px;
  background-color: #272727;
  color: white;
  border: none;
  border-radius: 25px;
  font-size: 16px;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 1rpx;
}

/* 按钮和其他内容的间距 */
.option-btn + .option-btn {
  margin-top: 40px;
}
