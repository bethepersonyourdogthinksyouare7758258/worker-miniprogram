/* pages/docgen/arbitration-request/arbitration-request.wxss */

.container {
  padding: 20px;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30px;
  padding: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12px;
  color: white;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 14px;
  opacity: 0.9;
}

.form-section {
  background-color: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
  padding-bottom: 10px;
  border-bottom: 2px solid #667eea;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 15px;
  font-size: 16px;
  background-color: #fafafa;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
  background-color: white;
}

.textarea {
  width: 100%;
  min-height: 100px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  font-size: 16px;
  background-color: #fafafa;
  box-sizing: border-box;
  resize: vertical;
}

.textarea:focus {
  border-color: #667eea;
  background-color: white;
}

.picker {
  height: 44px;
  line-height: 44px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 15px;
  background-color: #fafafa;
  color: #666;
}

.preview-section {
  background-color: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.preview-content {
  background-color: #f8f9fa;
  padding: 20px;
  border-radius: 8px;
  font-size: 14px;
  line-height: 1.6;
  white-space: pre-wrap;
  color: #333;
}

.button-group {
  display: flex;
  gap: 15px;
  margin-top: 30px;
}

.btn {
  flex: 1;
  height: 50px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-preview {
  background-color: #6c757d;
  color: white;
}

.btn-preview:active {
  background-color: #5a6268;
}

.btn-generate {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-generate:active {
  opacity: 0.8;
}

/* 响应式设计 */
@media screen and (max-width: 480px) {
  .container {
    padding: 15px;
  }
  
  .header {
    padding: 15px;
  }
  
  .title {
    font-size: 20px;
  }
  
  .form-section {
    padding: 15px;
  }
  
  .button-group {
    flex-direction: column;
  }
  
  .btn {
    margin-bottom: 10px;
  }
}
