/* 引入全局样式系统 */
@import "../../../styles/index.wxss";

.container {
  padding: 30rpx;
  background-color: #FDF8E1;
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx 20rpx 20rpx;
  margin-bottom: 0rpx;
  position: relative;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 20rpx;
}

/* 服务器下拉选择器 */
.server-selector-simple {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  z-index: 10;
}

.server-status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  transition: all 0.3s;
}

.server-status-dot.online {
  background-color: #52c41a;
  box-shadow: 0 0 8rpx rgba(82, 196, 26, 0.4);
}

.server-status-dot.offline {
  background-color: #ff4d4f;
  box-shadow: 0 0 8rpx rgba(255, 77, 79, 0.4);
}

.server-status-dot.unknown {
  background-color: #faad14;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.server-picker {
  display: flex;
  align-items: center;
  padding: 6rpx 12rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  border: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  min-width: 120rpx;
}

.current-server {
  font-size: 22rpx;
  color: #333;
  margin-right: 6rpx;
  white-space: nowrap;
}

.picker-arrow {
  font-size: 16rpx;
  color: #666;
  transition: transform 0.3s;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .server-selector-simple {
    right: 10rpx;
  }
  
  .current-server {
    font-size: 20rpx;
  }
}

/* 搜索区域 */
.search-section {
  display: grid;
  place-items: center;
  margin-top: 10px;
}

.search-input {
  width: 180%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background: white;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.search-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 0 10rpx;
}

/* 模式切换按钮 - 加宽以符合手机使用习惯 */
.mode-tabs {
  display: flex;
  margin: 30rpx 30rpx ;
  background: white;
  border-radius: 50rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 80rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s;
  position: relative;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-tab.active {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(116, 185, 255, 0.4);
}

/* 阶段筛选标签 - 统一按钮大小 */
.filter-tabs {
  display: flex;
  flex-direction: row;  /* 横向排列（默认值），强制写上避免继承问题 */
  gap: 10rpx; 
  justify-content: center;   /* 水平居中整个按钮组 */
  margin: 0 0 30rpx 0; 
}

.filter-tab {
  width: 150rpx;             /* 固定宽度，可根据需要调整 */
  height: 80rpx;             /* 固定高度 */
  text-align: center;
  padding: 0;                /* 内边距可根据需求调整 */
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  background: white;
  transition: all 0.3s;
  white-space: nowrap;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
  font-weight: 500;

  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-tab.active {
  background: linear-gradient(135deg, #ff7675 0%, #e17055 100%);
  color: white;
  border-color: transparent;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 118, 117, 0.3);
}

.filter-tab:active {
  transform: scale(0.95);
}

/* 内容列表 */
.content-list {
  padding: 0 30rpx;
}

.content-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.item-main {
  padding: 30rpx;
  position: relative;
}

.item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  flex: 1;
  line-height: 1.4;
}

.item-indicator {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.expand-icon,
.navigate-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.item-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-primary {
  background: linear-gradient(135deg, #ff7675 0%, #e17055 100%);
  color: white;
}

.tag-secondary {
  background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
  color: white;
}

.item-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 展开内容区域 */
.item-expanded {
  border-top: 1rpx solid #f0f0f0;
  background: #fafafa;
  animation: expandDown 0.3s ease-out;
}

@keyframes expandDown {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 1000rpx;
  }
}

.legal-basis-section,
.tool-link-section {
  margin-bottom: 30rpx;
}

.legal-basis-section:last-child,
.tool-link-section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx 10rpx 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.copy-btn {
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.section-content {
  padding: 0 30rpx 10rpx 30rpx;
}

.legal-basis-text,
.tool-link-text {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.provider-info {
  padding: 15rpx 30rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #e9ecef;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.provider-label {
  font-size: 24rpx;
  color: #666;
}

.provider-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.reviewer-status {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  padding: 20rpx 30rpx;
  text-align: center;
  border-top: 1rpx solid #e8e8e8;
}

.copy-all-btn {
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
  color: white;
  border: none;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 26rpx;
}

/* 空状态提示 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #ccc;
  line-height: 1.4;
}

/* 统计信息 */
.stats-info {
  text-align: center;
  padding: 20rpx;
  margin-top: 20rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #999;
}

/* 交互效果 */
.content-item:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

.copy-btn:active,
.copy-all-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .title {
    font-size: 42rpx;
  }
  
  .filter-tab {
    width: 130rpx;
    font-size: 24rpx;
  }
}
