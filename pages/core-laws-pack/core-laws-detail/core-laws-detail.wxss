/* pages/core-laws-pack/core-laws-detail/core-laws-detail.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部信息 */
.header {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title-section {
  margin-bottom: 20rpx;
}

.main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  display: block;
  margin-bottom: 20rpx;
}

.tag-section {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.tag-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.tag-legal {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

/* 内容区域 */
.content-section {
  margin-bottom: 100rpx;
}

/* 通用区域样式 */
.summary-section,
.conditions-section,
.steps-section,
.explanation-section,
.legal-basis-section,
.tool-link-section,
.provider-section {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.copy-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  min-width: auto;
  height: auto;
  line-height: 1.2;
}

.copy-btn::after {
  border: none;
}

.section-content {
  padding: 20rpx 30rpx 30rpx;
}

/* 具体内容样式 */
.summary-text,
.conditions-text,
.explanation-text,
.legal-basis-text,
.tool-link-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
}

/* 步骤样式 */
.step-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.step-number {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.step-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
  flex: 1;
}

/* 提供者信息 */
.provider-section {
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
}

.provider-info {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.provider-label {
  font-size: 24rpx;
  color: #888;
}

.provider-name {
  font-size: 24rpx;
  color: #555;
  font-weight: 500;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #e9ecef;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #e9ecef;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

/* 响应式设计 */
@media (max-width: 400rpx) {
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 20rpx;
  }
  
  .bottom-actions {
    flex-direction: column;
  }
  
  .action-btn {
    flex: none;
  }
}

/* 长文本处理 */
.legal-basis-text {
  word-break: break-all;
  white-space: pre-wrap;
}

.explanation-text {
  word-break: break-all;
  white-space: pre-wrap;
}

/* 工具链接样式 */
.tool-link-text {
  color: #667eea;
  font-weight: 500;
}

/* 动画效果 */
.action-btn:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

.copy-btn:active {
  transform: scale(0.95);
  transition: transform 0.1s;
}
