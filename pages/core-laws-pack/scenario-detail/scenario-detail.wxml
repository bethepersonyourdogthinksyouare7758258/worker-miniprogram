<!--维权场景详情页-->
<view class="container" wx:if="{{!loading && !error}}">
  
  <!-- 页面头部 -->
  <view class="header">
    <view class="title-section">
      <text class="page-title">{{scenario.title}}</text>
      <view class="tag-group">
        <text class="subject-tag">{{scenario.tag}}</text>
        <text class="legal-tag">{{scenario.legalTag}}</text>
      </view>
    </view>
  </view>

  <!-- 所需条件 -->
  <view class="content-section" wx:if="{{scenario.conditions}}">
    <view class="section-header">
      <text class="section-title">所需条件</text>
      <button class="copy-btn" bindtap="onCopyConditions">复制</button>
    </view>
    <view class="condition-content">
      <text class="content-text">{{scenario.conditions}}</text>
    </view>
  </view>

  <!-- 操作步骤 -->
  <view class="content-section" wx:if="{{scenario.actionSteps && scenario.actionSteps.length > 0}}">
    <view class="section-header">
      <text class="section-title">操作步骤</text>
      <button class="copy-btn" bindtap="onCopyActionSteps">复制</button>
    </view>
    <view class="steps-content">
      <view class="step-item" wx:for="{{scenario.actionSteps}}" wx:key="index">
        <text class="step-text">{{item}}</text>
      </view>
    </view>
  </view>

  <!-- 法条依据 -->
  <view class="content-section" wx:if="{{scenario.legalBasis}}">
    <view class="section-header">
      <text class="section-title">法条依据</text>
      <button class="copy-btn" bindtap="onCopyLegalBasis">复制</button>
    </view>
    <view class="legal-content">
      <text class="content-text">{{scenario.legalBasis}}</text>
    </view>
  </view>

  <!-- 相关法条解释 -->
  <view class="content-section" wx:if="{{scenario.relatedLaws}}">
    <view class="section-header">
      <text class="section-title">相关法条解释</text>
      <button class="copy-btn" bindtap="onCopyRelatedLaws">复制</button>
    </view>
    <view class="explanation-content">
      <text class="content-text">{{scenario.relatedLaws}}</text>
    </view>
  </view>

  <!-- 底部操作按钮 -->
  <view class="footer-actions">
    <button class="action-btn primary" bindtap="onCopyAll">复制全文</button>
    <button class="action-btn secondary" bindtap="onBack">返回</button>
  </view>

  <!-- 提供者信息 -->
  <view class="provider-info" wx:if="{{scenario.provider}}">
    <text class="provider-text">内容提供: {{scenario.provider}}</text>
    <text class="status-text" wx:if="{{scenario.status}}">审核状态: {{scenario.status}}</text>
  </view>

</view>

<!-- 加载状态 -->
<view class="loading-container" wx:if="{{loading}}">
  <view class="loading-content">
    <text class="loading-text">正在加载...</text>
  </view>
</view>

<!-- 错误状态 -->
<view class="error-container" wx:if="{{error}}">
  <view class="error-content">
    <text class="error-icon">⚠️</text>
    <text class="error-message">{{errorMessage}}</text>
    <button class="retry-btn" bindtap="onGoHome">返回主页</button>
  </view>
</view>
