/* pages/result/result.wxss */
.splash-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #c1c1c1;
  letter-spacing: 2rpx;
}

.content-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.steps-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2b2b2b;
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 30rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 30rpx;
}

.radar-section {
  margin-bottom: 60rpx;
}

canvas {
  width: 300px;
  height: 300px;
}

.cost-performance {
  font-size: 36rpx;
  font-weight: bold;
  color: #2b2b2b;
  margin-bottom: 60rpx;
}

.table {
  width: 90%;
  background-color: #fff;
  margin-bottom: 60rpx;
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid #ddd;
}

.table-header {
  
  background-color: #f5f5f5;
  border-bottom: 4rpx solid #333;
}

.table-cell {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  color: #2b2b2b;
  text-align: center;
  font-weight: normal;
}

.table-cell:first-child {
  text-align: left;
  font-weight: bold;
}


.message {
  width: 90%;
  font-size: 13px;
  color: #2b2b2b;
  text-align: justify;
  margin-bottom: 80rpx;
}

.qrcode {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 100rpx;
}

.share-button {
  width: 60%;
  padding: 20rpx;
  background-color: #333;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 10rpx;
  margin-bottom: 140rpx;
  }
  
  .share-button:hover {
    background-color: #45A049; /* 悬停时的背景颜色 */
  }